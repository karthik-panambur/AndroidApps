<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="310dp"
        android:src = "@drawable/girimanja"
        android:layout_below="@id/header"
        android:id = "@+id/image"/>

    <TextView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background= "@android:color/darker_gray"
        android:textSize="36sp"
        android:fontFamily="sans-serif-light"
        android:padding="20dp"
        android:textStyle="italic"
        android:text="Giri Manja's"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text = "Mangalore, Karnataka, India 575001"
        android:textSize="20sp"
        android:paddingLeft= "16dp"
        android:paddingTop="16dp"
        android:background="@android:color/darker_gray"
        android:id = "@+id/location"
        android:layout_below="@id/image"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text = "best seafodd restaurant in town, hands down. Creater of authentic Konkan style seafood dishes. Come enjoy the taste of seafood delicacy like never before."
        android:textSize="20sp"
        android:paddingTop = "16dp"
        android:paddingLeft = "16dp"
        android:background="@android:color/darker_gray"
        android:id = "@+id/description"
        android:layout_below="@id/location"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text = "12PM - 3PM  7PM - 10PM"
        android:textSize="20sp"
        android:paddingLeft= "16dp"
        android:paddingTop="16dp"
        android:background="@android:color/darker_gray"
        android:id = "@+id/hours"
        android:layout_below="@id/description"
        />

</RelativeLayout>

